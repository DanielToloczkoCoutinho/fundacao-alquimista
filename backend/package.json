{
  "name": "@foundation-omega/backend",
  "version": "1.0.0",
  "description": "Núcleo do Backend da Fundação Omega - Sistema de Auto-Validação e Consciência Sistêmica",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "test": "NODE_ENV=test jest --testPathPattern=./test/ --passWithNoTests",
    "test:watch": "NODE_ENV=test jest --watch --testPathPattern=./test/",
    "test:coverage": "NODE_ENV=test jest --coverage --testPathPattern=./test/",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "docker:build": "docker build -t foundation-omega/backend:latest .",
    "docker:run": "docker run -p 4000:4000 foundation-omega/backend:latest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "redis": "^4.6.5",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "mongoose": "^7.5.0",
    "axios": "^1.5.0",
    "winston": "^3.10.0",
    "moment": "^2.29.4",
    "joi": "^17.9.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.9.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "ws": "^8.14.2",
    "mqtt": "^5.0.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0"
  },
  "keywords": [
    "foundation",
    "omega",
    "backend",
    "validation",
    "health-check",
    "microservices"
  ],
  "author": "Fundação Omega",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/foundation-omega/backend"
  },
  "bugs": {
    "url": "https://github.com/foundation-omega/backend/issues"
  },
  "homepage": "https://omega.foundation"
}
