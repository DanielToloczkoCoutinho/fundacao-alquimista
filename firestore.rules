rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura/escrita para todos os usuários autenticados
    match /zenith_data/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Dados públicos de status
    match /public/status {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Dados de laboratórios
    match /laboratories/{labId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
