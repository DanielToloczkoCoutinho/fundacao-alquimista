{
  "apiVersion": "chaos-mesh.org/v1alpha1",
  "kind": "PodChaos",
  "metadata": {
    "name": "fractal-resilience-test",
    "namespace": "foundation-alchemist"
  },
  "spec": {
    "selector": {
      "namespaces": [
        "gateway"
      ],
      "labelSelectors": {
        "app": "apollo-gateway"
      }
    },
    "mode": "one",
    "action": "pod-kill",
    "duration": "30s",
    "scheduler": {
      "cron": "@every 1h"
    }
  }
}
